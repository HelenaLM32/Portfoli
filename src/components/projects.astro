---

import cv from '../data/cv.json';
const projects = cv.projects;
---

<section>
  <div class="contenedor">
    <h2 style="font-size: 24px; font-weight: bold; margin-top: 10%;">Personal Projects</h2>
  <p style="color: #666;">Below is a selection of recent projects that I've worked on.</p>
  </div>
  
  <div class="projects-grid">
    {projects.map((project) => (
      <a
            class="project-card"
            href={`${project.url}`}
          >
        <img src={project.image} />
        <div class="project-info">
          <h3>{project.name}</h3>
          <p>{project.description}</p>
        </div>
      </a>
    ))}
  </div>

</section>

  
  



<style>
  .contenedor{
    gap: 24px;
    width: 80%;
    margin: 0 auto;
    font-family: sans-serif;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    padding: 40px;
    max-width: 80%;
    margin: 0 auto;
  }

  .project-card {
    background-color: #f1f5f9;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
  }

  .project-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .project-info {
    padding: 20px;
    text-decoration: none; 
  }

  .project-info h3 {
    font-size: 20px;
    margin-bottom: 10px;
    font-family: sans-serif;
    color: black;
    text-decoration: none; 
  }

  .project-info p {
    color: #666;
    font-size: 14px;
    font-family: sans-serif;
    text-decoration: none; 
  }

  @media (max-width: 1000px) {
    .projects-grid{
      display: flex;
      flex-direction: column;
    }
  }
 
</style>